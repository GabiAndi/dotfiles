{
    // VSCode
    "window.zoomLevel": 1.25,
    "editor.fontSize": 16,
    "editor.fontFamily": "MesloLGS NF",
    "editor.wordWrap": "on",
    "workbench.startupEditor": "none",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "One Dark Pro Darker",
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 300000,
    "files.insertFinalNewline": true,
    "terminal.integrated.fontFamily": "MesloLGS NF",
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.gpuAcceleration": "on",
    "terminal.integrated.defaultProfile.linux": "zsh",
    "debug.openDebug": "openOnDebugBreak",
    "debug.internalConsoleOptions": "openOnSessionStart",
    "update.showReleaseNotes": false,
    "extensions.ignoreRecommendations": true,
    "editor.rulers": [
        {"column": 100, "color": "#9f4444"}
    ],
    // Latex
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "--shell-escape",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {}
        }
    ],
    // RedHat
    "redhat.telemetry.enabled": false,
    // CMake
    "cmake.configureOnOpen": false,
    // C++
    "C_Cpp.clang_format_style": "{ BasedOnStyle: LLVM, IndentWidth: 2, TabWidth: 2, AllowShortIfStatementsOnASingleLine: false, IndentCaseLabels: false, ColumnLimit: 0, AccessModifierOffset: -2, NamespaceIndentation: All, FixNamespaceComments: false }",
    // Flutter
    "[dart]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.rulers": [
            80
        ],
        "editor.selectionHighlight": false,
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.suggestSelection": "first",
        "editor.tabCompletion": "onlySnippets",
        "editor.wordBasedSuggestions": false,
    },
    "dart.env": {
        "CHROME_EXECUTABLE": "/usr/bin/google-chrome-stable"
    },
    "dart.flutterSdkPath": "/opt/flutter",
    "dart.debugExternalPackageLibraries": true,
    "dart.debugSdkLibraries": true,
    // Python
    "[python]": {
        "editor.formatOnType": true,
        "editor.defaultFormatter": "ms-python.autopep8"
    },
    // Git
    "git.openRepositoryInParentFolders": "never",
    // Hexeditor
    "hexeditor.columnWidth": 16,
    "hexeditor.showDecodedText": true,
    "hexeditor.defaultEndianness": "little",
    "hexeditor.inspectorType": "aside",
}
